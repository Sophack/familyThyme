 {{#each recipes as |recipe|}}
<div class="content" id="main">

  <section class="card">
  <a href="/recipe/{{id}}">
    <header>{{title}}</header>
    <img src="{{recipeImage.image}}">
  </a>

<div class="w3-container">
  <h2>{{recipeInfo.title}}</h2>

 {{/each}}


  <div class="w3-card-4" style="width:50%">
    {{!-- create object with image --}}
    <img src="/images/brocsoup.jpg" alt="pasta" style="width:100%">
    <div class="w3-container w3-center">
      <p>{{recipeInfo.category}}</p>
    </div>
  </div>
    <section id="userInputRecipe">
            <h2>Add a new recipe</h2>
         
          </section>
          
          <section id="input-recipes">
            <h2>Input Your Recipes</h2>
            <form>
              <label for="recipe-name">Recipe Name:</label>
              <input type="text" id="recipe-name" name="recipe-name">
              <br>
              <label for="directions">Directions:</label>
              <textarea id="directions" name="directions"></textarea>
              <br>
              <input type="submit" value="Save!">
            </form>
            <button id="add-recipes">I'm feeling adventurous</button>
          </section>
</div>

<div class="w3-container">
  <h2>{{recipeInfo.title}}</h2>



  <div class="w3-card-4" style="width:50%">
    <img src="{{recipeImage.image}}" alt="pasta" style="width:100%">
    <div class="w3-container w3-center">
      <p>{{recipeInfo.category}}</p>
    </div>
  </div>
</div>



</body>

   
 